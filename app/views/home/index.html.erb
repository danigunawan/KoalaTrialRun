<% if @project.present? %>
  <div class='col-lg-12 col-md-12 col-xs-12 col-sm-12'>LIST OF PAGES</div>
  <% if @details.present? %>
    <% @details.each do |detail| %>
      <div class='col-lg-3 col-md-3 col-sm-3 col-xs-2'>
        <%= link_to detail['name'], posts_path(page_id: detail['id']) %><br/>
      </div>
    <% end %>
  <% else %>
    <div class='col-lg-12 col-md-12 col-xs-12 col-sm-12'>
      YOU DON'T HAVE ANY PAGES. ADD PAGE TO SEE IT LISTED HERE
    </div>
  <% end %>
<% else %>
  <div class='col-lg-12 col-md-12 col-xs-12 col-sm-12'>
    LOGIN TO START
  </div>
<% end %>
